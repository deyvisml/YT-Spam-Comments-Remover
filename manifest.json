{
  "manifest_version": 3,
  "name": "DEV - Spam remover",
  "version": "1.0.1",

  "description": "Remove spam comments",
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "css": ["src/button/button.css", "src/modal/modal.css"],
      "js": [
        "src/machine-learning/TextPreprocessor.js",
        "src/machine-learning/MultinomialNB.js",
        "src/libs/fontawesome.js",
        "src/button/button.js",
        "src/modal/modal-utils.js",
        "src/modal/modal-events.js",
        "src/modal/modal.js",
        "src/utils.js",
        "src/content-script.js"
      ]
    },
    {
      "matches": ["https://www.google.com/*", "https://duckduckgo.com/*"],
      "js": ["src/utils.js", "src/google-script.js"]
    }
  ],
  "options_page": "options/options.html",
  "permissions": ["storage", "tabs"]
}
